<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Joomla Agenda - Evenement aanmaken</name>
    <author>Rienk van der Goot</author>
    <creationDate>Sept 2017</creationDate>
    <authorEmail>rienk_goot@hotmail.com</authorEmail>
    <authorUrl>www.rienkvandergoot.nl</authorUrl>
    <version>1.0.0</version>
    <description>Deze module laat een evenement aanmaken formulier zien.</description>
    <files>
        <filename>mod_events_form.xml</filename>
        <filename module="mod_events_form">mod_events_form.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
        <folder>sql</folder>
    </files>
    <config>
    </config>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql">sql/mysql/updates</schemapath>
        </schemas>
    </update>
</extension>