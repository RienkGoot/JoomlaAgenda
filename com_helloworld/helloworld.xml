<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">

	<name>COM_HELLOWORLD</name>
	<creationDate>Sept 2017</creationDate>
	<author>Rienk van der Goot</author>
	<authorEmail>rienk_goot@hotmail.com</authorEmail>
	<authorUrl>http://www.rienkvandergoot.nl</authorUrl>
	<version>1.0.0</version>
	<description>Een component om evenementen mee te beheren.</description>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>helloworld.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>language</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_HELLOWORLD_MENU</menu>
		<!-- Administration Main File Copy Section -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>helloworld.php</filename>
			<filename>controller.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
			<!-- tables files section -->
			<folder>tables</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<!-- admin languages files section -->
			<folder>language</folder>
			<!-- controllers files section -->
			<folder>controllers</folder>
		</files>
	</administration>

</extension>